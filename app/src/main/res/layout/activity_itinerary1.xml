<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:backgroundTint="@color/biruSlebew"
    android:background="@color/biruSlebew"
    tools:context=".itinerary1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berapa hari kamu akan berwisata di Banyuwangi?"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/putihSlebew" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/et_hari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/putihSlebew"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hari"
        android:textColor="@color/putihSlebew"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pada jam berapa saja kamu akan berwisata?"
        android:textSize="20sp"
        android:textColor="@color/putihSlebew"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/putihSlebew"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas yang kamu inginkan"
        android:textSize="15sp"
        android:textColor="@color/putihSlebew"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobil"
                android:textColor="@color/putihSlebew"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local Guide"
                android:textColor="@color/putihSlebew"
                android:textSize="20sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

    </LinearLayout>

<Button
    android:id="@+id/btn_next1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_round"
    android:text="next"
    android:textColor="@color/putihSlebew"/>
    </LinearLayout>



