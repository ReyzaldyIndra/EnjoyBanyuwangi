<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomActivity">

    <ImageView
        android:id="@+id/img_pict"
        android:layout_width="196dp"
        android:layout_height="226dp"
        android:layout_below="@+id/btn_pict"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klik"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/btn_pict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/card_round"
        android:backgroundTint="@color/biruSlebew"
        android:textColor="@color/putihSlebew"
        android:text="deteksi sekarang"/>
    


</RelativeLayout>